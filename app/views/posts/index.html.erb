<div class="col-md-8">
  <br />
  <% @posts.each do |post| %>
      <div class="card mb-4">
        <div class="card-body">
          <h2 class="card-title"><%= link_to post.title, post %></h2>
          <p class="card-text">
          <%= post.content %>
          </p>
          <%= link_to 'Read More', post, class: 'btn btn-primary' %>
        </div>
        <div class="card-footer text-muted">
          Posted on January 1, 2017 by
          <a href="#">Start Bootstrap</a>
          <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'float-right' %>
          <%= link_to 'Edit', edit_post_path(post), class: 'float-right edit-post' %>
        </div>
      </div>
  <% end %>

  <!-- Pagination -->
  <ul class="pagination justify-content-center mb-4">
    <li class="page-item">
      <a class="page-link" href="#">&larr; Older</a>
    </li>
    <li class="page-item disabled">
      <a class="page-link" href="#">Newer &rarr;</a>
    </li>
  </ul>
</div>
<%= render 'layouts/right_sidebar' %>
